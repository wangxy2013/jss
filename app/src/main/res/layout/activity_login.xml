<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

   <include layout="@layout/layout_head"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dm_66"
        android:src="@drawable/ic_login_logo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="@dimen/dm_52"
        android:layout_marginRight="48dp">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_phone" />


        <com.jss.sdd.widget.ClearEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_below="@+id/et_phone"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="@dimen/dm_52"
        android:layout_marginRight="48dp">

        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd" />

        <ImageView
            android:id="@+id/iv_hide_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:src="@drawable/ic_hide_pwd" />

        <com.jss.sdd.widget.ClearEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_toLeftOf="@+id/iv_hide_pwd"
            android:layout_toRightOf="@+id/iv_pwd"
            android:background="@color/transparent"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_below="@+id/et_pwd"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_toRightOf="@+id/iv_pwd"
            android:background="@color/line" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_45"
        android:layout_marginRight="@dimen/dm_45"
        android:background="@drawable/common_orange_45dp"
        android:gravity="center"
        android:padding="@dimen/dm_10"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/t18" />


    <RelativeLayout
        android:layout_margin="@dimen/dm_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/blackB"
            android:textSize="@dimen/t14"
            android:id="@+id/tv_forget"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/blackB"
            android:textSize="@dimen/t14"
            android:id="@+id/tv_register"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>