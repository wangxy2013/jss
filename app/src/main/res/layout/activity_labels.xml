<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_15"
        android:gravity="center"
        android:text="让 我 们 更 懂 你"
        android:textColor="@color/blackE"
        android:textSize="@dimen/t16"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10"
        android:gravity="center"
        android:text="优先推荐与你更匹配的商品"
        android:textColor="@color/blackB"
        android:textSize="@dimen/t12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginTop="@dimen/dm_10"
        android:background="@color/line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10"
        android:gravity="center">

        <ImageView

            android:id="@+id/iv_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_woman_selector" />

        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:src="@drawable/ic_man_selector" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_18"
        android:paddingLeft="@dimen/dm_25"
        android:paddingRight="@dimen/dm_25">

        <TextView
            android:id="@+id/tv_marriages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textColor="#EC3C24"
            android:textSize="@dimen/t16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_18"
            android:layout_toRightOf="@+id/tv_marriages">

            <TextView
                android:id="@+id/tv_marriages1"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单身" />

            <TextView
                android:id="@+id/tv_marriages2"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="恋爱" />

            <TextView

                android:id="@+id/tv_marriages3"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已婚" />

            <TextView
                android:id="@+id/tv_marriages4"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="保密" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10"
        android:paddingLeft="@dimen/dm_25"
        android:paddingRight="@dimen/dm_25">

        <TextView
            android:id="@+id/tv_ages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textColor="#EC3C24"
            android:textSize="@dimen/t16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_18"
            android:layout_toRightOf="@+id/tv_ages">

            <TextView
                android:id="@+id/tv_ages1"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="90" />

            <TextView
                android:id="@+id/tv_ages2"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="80" />

            <TextView
                android:id="@+id/tv_ages3"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="70" />

            <TextView
                android:id="@+id/tv_ages4"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="其他" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10"
        android:paddingLeft="@dimen/dm_25"
        android:paddingRight="@dimen/dm_25">

        <TextView
            android:id="@+id/tv_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业"
            android:textColor="#EC3C24"
            android:textSize="@dimen/t16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_18"
            android:layout_toRightOf="@+id/tv_profession">

            <TextView
                android:id="@+id/tv_profession1"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="学生" />

            <TextView
                android:id="@+id/tv_profession2"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上班" />

            <TextView
                android:id="@+id/tv_profession3"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="辣妈" />

            <TextView
                android:id="@+id/tv_profession4"
                style="@style/label_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="自由职业" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginTop="@dimen/dm_30"
        android:background="@color/line" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_15"
        android:gravity="center"
        android:text="至少选择4项"
        android:textColor="#EC3C24"
        android:textSize="@dimen/t16"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_28" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_25"
        android:layout_marginRight="@dimen/dm_45"
        android:background="@drawable/common_orange_45dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/t16" />
</LinearLayout>