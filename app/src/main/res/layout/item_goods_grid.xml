<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dm_7"
    android:paddingBottom="@dimen/dm_10"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:src="@drawable/pic_goods" />


    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_5"
        android:textColor="@color/blackD"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/t10" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_coupon"
            android:gravity="center"
            android:text="劵:99.99"
            android:layout_marginRight="18dp"
            android:textColor="@color/white"
            android:textSize="@dimen/t10" />

        <TextView
            android:id="@+id/tv_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ygyj"
            android:gravity="center"
            android:text="预估佣金¥:99.99"
            android:textColor="@color/main_bg"
            android:textSize="@dimen/t10" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="￥:999.99"
            android:textColor="@color/tangerine"
            android:textSize="@dimen/t12" />

        <TextView
            android:id="@+id/tv_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:gravity="center"
            android:text="¥:999.99"
            android:textColor="@color/grayA"
            android:textSize="@dimen/t10" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_5">

        <ImageView
            android:id="@+id/iv_group_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_3"
            android:src="@drawable/ic_group_buy" />

        <ImageView
            android:id="@+id/iv_free_postage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_group_buy"
            android:src="@drawable/ic_free_postage" />


        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已售出9.99万件"
            android:textColor="@color/blackB"
            android:textSize="@dimen/t11" />
    </RelativeLayout>
</LinearLayout>