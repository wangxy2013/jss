<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:padding="@dimen/dm_10">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scan" />


    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dm_8"
        android:background="@drawable/main_search_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_toLeftOf="@+id/iv_message"
        android:layout_toRightOf="@+id/iv_scan">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search" />

        <TextView
            android:text="请输入您当前要搜索 才商品"
            android:textColor="@color/white"
            android:textSize="@dimen/t12"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_message" />
</RelativeLayout>