<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_margin="@dimen/dm_10"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_goods" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm_5"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商品名称"
                android:textColor="@color/blackD"
                android:textSize="@dimen/t10" />

            <ImageView
                android:id="@+id/iv_isJdSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:src="@drawable/ic_jdzy" />


            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:background="@drawable/common_gray_45dp"
                android:paddingLeft="@dimen/dm_10"
                android:paddingTop="@dimen/dm_2"
                android:paddingRight="@dimen/dm_10"
                android:paddingBottom="@dimen/dm_2"
                android:text="已失效"
                android:textColor="@color/white"
                android:textSize="@dimen/t8" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款金额"
                android:textColor="@color/blackC"
                android:textSize="@dimen/t10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:text="¥9999.99"
                android:textColor="@color/black"
                android:textSize="@dimen/t12"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_40"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券金额"
                android:textColor="@color/blackC"
                android:textSize="@dimen/t10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:text="¥9999.99"
                android:textColor="@color/black"
                android:textSize="@dimen/t12"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_40"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金"
                android:textColor="@color/blackC"
                android:textSize="@dimen/t10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:text="¥9999.99"
                android:textColor="@color/black"
                android:textSize="@dimen/t12"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


   <TextView
       android:text="2019年1月26 00:00:39 创建"
       android:textColor="@color/blackB"
       android:textSize="@dimen/t10"
       android:layout_margin="@dimen/dm_10"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/dm_10"/>
</LinearLayout>