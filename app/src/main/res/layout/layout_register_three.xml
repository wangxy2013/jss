<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_register_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="@dimen/dm_110"
        android:layout_marginRight="48dp">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_phone" />


        <com.jss.sdd.widget.ClearEditText
            android:id="@+id/et_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_20"
            android:maxLines="1"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="@color/transparent"
            android:hint="请输入您的昵称"
            android:maxLength="18"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_below="@+id/et_nickName"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="@dimen/dm_52"
        android:layout_marginRight="48dp">

        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd" />

        <ImageView
            android:id="@+id/iv_hide_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:src="@drawable/ic_hide_pwd" />

        <com.jss.sdd.widget.ClearEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_toLeftOf="@+id/iv_hide_pwd"
            android:layout_toRightOf="@+id/iv_pwd"
            android:background="@color/transparent"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_below="@+id/et_pwd"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="@dimen/dm_52"
        android:layout_marginRight="48dp">

        <ImageView
            android:id="@+id/iv_pwd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd" />

        <ImageView
            android:id="@+id/iv_hide_pwd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:src="@drawable/ic_hide_pwd" />

        <com.jss.sdd.widget.ClearEditText
            android:id="@+id/et_pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_toLeftOf="@+id/iv_hide_pwd1"
            android:layout_toRightOf="@+id/iv_pwd1"
            android:background="@color/transparent"
            android:hint="请确认您的密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_below="@+id/et_pwd1"
            android:background="@color/line" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_50"
        android:layout_marginTop="@dimen/dm_50"
        android:layout_marginRight="@dimen/dm_50"
        android:background="@drawable/common_red_45dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/t16" />
</LinearLayout>